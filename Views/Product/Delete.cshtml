@model AuthUser.Models.Product;

<a asp-controller="User" asp-action="Main" class="btn btn-secondary">Back</a>
<h2 class="mt-3">Are you sure you want to delete the product?</h2>
<div>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button class="btn btn-primary" type="submit">Yes, delete</button> &nbsp;&nbsp;&nbsp;
    <a asp-controller="User" asp-action="Main">Cancel</a>
</form>

