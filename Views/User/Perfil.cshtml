@model UserProfile

@await Html.PartialAsync("_UserBack")

<h2 class="mt-3">Your Profile</h2>

<form method="post" action="@Url.Action("Update", "User")">
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="Username" value="@Model.Username" class="form-control" />
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="UserEmail" value="@Model.UserEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="UserPassword" value="@Model.UserPassword" class="form-control" />
    </div>

    <!--button type="submit" class="btn btn-primary mt-3">
        <i class="fa-solid fa-save"></i> Save changes
    </button-->
</form>


