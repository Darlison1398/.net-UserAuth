@model AuthUser.Models.Product;

@await Html.PartialAsync("_UserBack")

<h1 class="mt-3">Edit product</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" required/>
    </div>
    <button type="submit" class="btn btn-primary mt-3 w-100">Save changes</button>
</form>
